= form_for @space do |f|
  - if @space.errors.any?
    #error_explanation
      %h2= "#{pluralize(@space.errors.count, "error")} prohibited this space from being saved:"
      %ul
        - @space.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :img_url
    = f.text_field :img_url
  .actions
    = f.submit 'Save'
